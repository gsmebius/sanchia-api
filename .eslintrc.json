{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["standard-with-typescript", "plugin:prettier/recommended"],
    "plugins": ["prettier"],
    "parserOptions": {
        "project": "tsconfig.json",
        "tsconfigRootDir": "./",
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": "error"
    }
}
